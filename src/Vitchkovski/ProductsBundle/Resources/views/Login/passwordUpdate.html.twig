{% extends '::base.html.twig' %}

{% block title %}Vitchkovski | Password Update{% endblock %}

{% block body %}
    <form class="form-signin" action="{{ path('VitchkovskiProductsBundle_passwordResetLink', {'resetEmailCode':  security_code  }) }}" method="post">
        <h2 class="form-signin-heading">Update Password</h2>
        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder':'Enter your new password', 'style': 'margin-bottom: 10px'}}) }}
        {{ form_row(form._token) }}

        <button class="btn btn-lg btn-primary btn-block" type="submit">Update My Password</button>
    </form>
{% endblock %}