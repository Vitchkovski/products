{% extends '::base.html.twig' %}

{% block title %}Vitchkovski | User Info{% endblock %}

{% block body %}

    <div class="container">
        <h2>My Personal Info</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-8">
                                <h2>{{ user.username }}</h2>
                                <p><strong>Email: </strong>{{ user.email }}</p>
                                <p><strong>API token: </strong>{{ user.ApiKey}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}